class {{ name }} < Formula
  {{ #if description }}
  desc "{{ description }}"
  {{ /if }}
  {{ #if homepage }}
  homepage "{{ homepage }}"
  {{ /if }}
  url "{{ url }}"
  {{ #if version }}
  version "{{ version }}"
  {{ /if }}
  sha256 "{{ tarball_checksum }}"
  {{ #if license }}
  license "{{ license }}"
  {{ /if }}
  {{ #if head }}
  head "{{ head.url }}"{{ #if head.branch }}, branch: "{{ head.branch }}"{{ /if }}
  {{ /if }}
  {{ #if dependencies }}

  {{ #each dependencies }}
  depends_on "{{ name }}" => :{{ one_or_many symbol }}
  {{ /each }}
  {{ /if }}

  def install
    {{{ ../../install_info }}}
  end
  {{ #if caveats}}

  def caveats
    "{{ caveats }}"
  end
  {{ /if }}
  {{ #if test }}

  test do
    {{{ test }}}
  end
  {{ /if }}
end
