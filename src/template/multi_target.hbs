# typed: false
# frozen_string_literal: true

# DO NOT EDIT THIS FILE

class {{ name }} < Formula
    {{ #if description }}
    desc "{{ description }}"
    {{ /if }}
    {{ #if homepage }}
    homepage "{{ homepage }}"
    {{ /if }}
    {{ #if license }}
    license "{{ license }}"
    {{ /if }}
    version "{{ version }}"

    {{ #each targets }}
    {{ #if (eq Multi.os "UnknownLinuxGnu") }}
    on_linux do
        {{ #each Multi.archs}}
        {{ #if (eq arch "Amd64") }}
        if Hardware::CPU.intel?
            url "{{ url }}"
            sha256 "{{ hash }}"

            def install
                {{{ ../../install_info }}}
            end
        end
        {{ /if }}
        {{ #if (eq arch "Arm64") }}
        if Hardware::CPU.arm?
            url "{{ url }}"
            sha256 "{{ hash }}"

            def install
                {{{ ../../install_info }}}
            end
        end
        {{ /if }}
        {{ /each }}
    end
    {{ /if }}
    {{ #if (eq Multi.os "AppleDarwin") }}
    on_macos do
    {{ #each Multi.archs }}
        {{ #if (eq arch "Amd64") }}
        if Hardware::CPU.intel?
            url "{{ url }}"
            sha256 "{{ hash }}"

            def install
                {{{ ../../install_info }}}
            end
        end
        {{ /if }}
        {{ #if (eq arch "Arm64") }}
        if Hardware::CPU.arm?
            url "{{ url }}"
            sha256 "{{ hash }}"

            def install
                {{{ ../../install_info }}}
            end
        {{ /if }}
    {{ /each }}
    end
    {{ /if }}
    {{ /each }}
    {{ #if caveats}}

    def caveats
        "{{{ caveats }}}"
    end
    {{ /if }}
    {{ #if test }}

    test do
        {{{ test }}}
    end
    {{ /if }}
end
